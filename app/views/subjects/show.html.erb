<div class='container'>
  <div class="row">
    <%= link_to 'Back', subjects_path, class: 'btn btn-sammi'%>
  </div>
  <div class="row d-flex justify-content-between">
    <h1> <%= @subject.name %> </h1>
    <h1>Status: <%= (@subject.class_members.map {|student| student.daily_emotions.map{|emo| emo.emotion.number}.sum / student.daily_emotions.length}.sum / @subject.class_members.length).to_f %></h1>
  </div>
  <div class='row'>
    <% @subject.class_members.each do |member| %>
      <div class='col-12 col-md-6 col-lg-4'>
      <%= link_to users_show_path(member) do %>
        <div class='card-container' style='margin:20px'>
          <div class='row'>
            <div class='col-6 pr-0 border-right'>
              <div class="card-product">
                <div class='container justify-content-center'>
                  <div class='row mb-3'>
                    <%= image_tag asset_path(member.photo), class: "avatar-large m-auto", alt: "avatar-large" %>
                  </div>
                  <div class='row'>
                    <h2 style='margin:auto'><%= member.first_name %> <%= member.last_name %></h2>
                  </div>
                </div>
              </div>
            </div>
            <div class='col-6 pl-0'>
              <div class='emoji-block'>
                <p id="emotion"><%= member.emotions.last.rating %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
