
<div class="row mb-3">
  <div class="col-6 ml-0">
    <h1>Your Appointments</h1>
  </div>
  <div class="col-6">
    <%= link_to 'Make an appointment', subjects_path, class: 'btn btn-ghost float-right'%>
  </div>
</div>

<div class="row border-bottom">
  <h2>Pending:</h2>
</div>

<% @pending_appointments.order(:date).each do |appointment| %>
  <div class="row appointment-card">
    <div class="col-3">
      <div class="row">
        <div class="col-sm-12 col-lg-3">
          <%= image_tag asset_path(appointment.student.photo), class: "avatar m-auto", alt: "avatar" %>
        </div>
        <div class="col-sm-12 col-lg-9 mt-2">
          <h5><%= appointment.student.first_name %> <%= appointment.student.last_name %></h5>
        </div>
      </div>
    </div>
    <div class="col-3 mt-2">
       <p><%= appointment.date.strftime("%a, %d %B, %Y") %> </p>
    </div>
    <div class="col-1 mt-2">
      <p><%= appointment.date.strftime("%I:%M %p") %> </p>
    </div>
    <div class="col-5 appointment-buttons">
      <div class="row">
        <div class="reschedule-button col-5">
          <button class="btn btn-ghost" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
            Reschedule
          </button>
          <div class="collapse" id="collapseExample">
            <div class="card card-body">
              <div class="container">
                <div class="row justify-center-center">
                  <div class="col-12">
                    <%= simple_form_for [appointment] do |f| %>
                      <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
                      <%= f.submit 'Submit', class: "btn btn-sammi"%>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-5">
          <% if current_user.teacher %>
            <%= link_to 'Completed', appointment_path(appointment, appointment: { completed: true }), method: :patch, class: 'btn btn-sammi' %>
          <% end %>
        </div>
        <div class="nav-item dropdown col-2" style="text-align: right">
          <i class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.teacher %>
                <%= link_to 'Cancel', appointment_path(appointment), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </div>
          </i>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row border-bottom">
  <h2>Past:</h2>
</div>

<% @completed_appointments.order(:date).each do |appointment| %>
  <div class="row appointment-card">
    <div class="col-3">
      <div class="row">
        <div class="col-sm-12 col-lg-3">
          <%= image_tag asset_path(appointment.student.photo), class: "avatar m-auto", alt: "avatar" %>
        </div>
        <div class="col-sm-12 col-lg-9 mt-2">
          <h5><%= appointment.student.first_name %> <%= appointment.student.last_name %></h5>
        </div>
      </div>
    </div>
    <div class="col-3 mt-2">
       <p><%= appointment.date.strftime("%a, %d %B, %Y") %> </p>
    </div>
    <div class="col-1 mt-2">
      <p><%= appointment.date.strftime("%I:%M %p") %> </p>
    </div>
    <div class="col-5">
      <div class="row">
        <div class="col-10"></div>
        <div class="nav-item dropdown col-1" style="text-align: right">
          <i class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <% if current_user.teacher %>
                <%= link_to 'Hide appointment', appointment_path(appointment), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </div>
          </i>
        </div>
      </div>
    </div>
  </div>
<% end %>

