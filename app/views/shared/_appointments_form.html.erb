<div class="container">
  <div class="row justify-center-center">
    <div class="col-12">
      <%= simple_form_for [@student, @appointment] do |f| %>
        <%= f.input :comment %>
        <%= f.input :date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.submit class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
