<div class='credentials-container' style="min-height: calc(100vh)">
  <div class="login">
    <h1 id="sammi-logo-login">Sammi</h1>
    <p id="login-tagline"> Supporting Teachers, Supporting Students</p>
    <!-- <div class="row"> -->
      <div class="login-form col-xs-8 col-sm-12">
        <h1 class="login-header">Log in</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'btn-sammi' %>
          </div>
        <% end %>

        <div class="container" id="devise-links">
          <%= render "devise/shared/links" %>
        </div>
    <!-- </div> -->
<!--
    </div> -->
  </div>
</div>
